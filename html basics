    }
    const con_obj= {
        "Year of Independence":"1947"
    }

    // Printing them in console
    console.log(sample_obj); //The whole object is printed
    console.log(sample_obj.Name);// The particular instance will be printed
    console.log(sample_obj['Address']);

    // Functions in JS
